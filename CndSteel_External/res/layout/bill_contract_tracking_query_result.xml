<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- 合同号 -->
    <RelativeLayout
        style="@style/CommonDataRowStyle"
        android:background="@color/white_bg" >

        <TextView
            android:id="@+id/contract_item_Num_title"
            style="@style/CommonDataRowContentStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="@string/contract_num" />
        <TextView
            android:id="@+id/txtV_contractTrackingConCode"
            style="@style/CommonDataRowContentStyle"
            android:layout_toRightOf="@id/contract_item_Num_title"
            android:layout_centerVertical="true"
            android:textColor="@color/black" />
    </RelativeLayout>

    <!-- 建发收取状态 -->
    <RelativeLayout style="@style/CommonDataRowStyle" >

        <TextView
            style="@style/CommonDataRowTitleStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/JianFaGetState" />

        <TextView
            android:id="@+id/txtV_contractTrackingWzStatus"
            style="@style/CommonDataRowContentStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    
    <!-- 我司收取状态 -->
    <RelativeLayout style="@style/CommonDataRowStyle" >

        <TextView
            style="@style/CommonDataRowTitleStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/ourCompanyGetState" />

        <TextView
            android:id="@+id/txtV_contractTrackingCustomerStatus"
            style="@style/CommonDataRowContentStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
       
</LinearLayout>
