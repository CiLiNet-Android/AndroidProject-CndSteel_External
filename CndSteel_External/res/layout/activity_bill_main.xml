<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/CommonDataRowStyle"
        android:background="@drawable/wave"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <!-- 合同开票 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_theContractOfMakeOutAnInvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="0dp"
                android:text="@string/TheContractOfMakeOutAnInvoice"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imgV_theContractOfMakeOutAnInvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/smallbar"
                android:paddingBottom="0dp" />
        </LinearLayout>

        <!-- 合同正本跟踪 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_ContractTracking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="0dp"
                android:text="@string/ContractTracking"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imgV_ContractTracking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/smallbar"
                android:paddingBottom="0dp"
                android:visibility="invisible"/>
            
        </LinearLayout>
        
    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/vPager_billQuery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center" />

</LinearLayout>