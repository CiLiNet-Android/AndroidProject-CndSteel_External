<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!-- 页面背景色 -->
    <style name="CommonDataPageBgStyle">
        <item name="android:background">#f5f5f5</item>
    </style>
    
    <!-- 进度加载框样式 -->
    <style name="LoadingDialogProgressStyle" parent="@android:style/Theme.Dialog">
        <!-- <item name="android:windowFrame">@drawable/transparent</item> -->
        <!-- 是否浮动在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <!-- <item name="android:windowIsTransIucent">true</item> -->
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:windowBackground">@drawable/transparent</item> -->
        <!-- 是否允许对话框的背景变暗 -->
        <!-- <item name="android:backgroundDimEnable">false</item> -->
    </style>
    
    <!-- 数据行样式 -->
    <style name="CommonDataRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/common_data_row_bg</item>
    </style>
    
    <!-- 数据行标题样式 -->
    <style name="CommonDataRowTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <!-- 数据行内容样式 -->
    <style name="CommonDataRowContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    
    <!-- 通用按钮样式 -->
    <style name="CommonButtonStyle">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
       	<item name="android:textColor">@color/white</item>
       	<item name="android:background">@drawable/module_btn_bg</item>    
    </style>
    
     <!-- DatePickerDialog Style -->
    <style name="DatePickerDialogStyle" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="view_animation" parent="android:Animation">  
        <item name="@android:windowEnterAnimation">@anim/in</item>  
        <item name="@android:windowExitAnimation">@anim/out</item> 
    </style> 

</resources>