<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/framework"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <!-- 顶部标题导航区 -->
    <FrameLayout 
        android:id="@+id/framework_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/module_top_bar_bg"
        android:padding="15dp">
        
        <!-- 左边按钮 -->
        <ImageButton 
            android:id="@+id/imgBtn_topLeft"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical|left"
            android:background="@drawable/module_top_bar_back"/>
        
        <!-- 中间标题 -->
        <TextView 
            android:id="@+id/txtV_topCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="25sp"/>
        
        <!-- 右边按钮 -->
        <ImageButton 
            android:id="@+id/imgBtn_topRight"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical|right"
            android:background="@null"
            android:visibility="gone"/>
        
    </FrameLayout>
    
    <!-- 内容区 -->
    <FrameLayout 
        android:id="@+id/framework_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/framework_top"
        style="@style/CommonDataPageBgStyle">
    </FrameLayout>

</RelativeLayout>