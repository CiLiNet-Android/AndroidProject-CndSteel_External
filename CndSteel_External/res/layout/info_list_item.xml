<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        style="@style/CommonDataRowStyle"
        android:layout_centerVertical="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
  		android:paddingTop="8dp"
  		android:paddingBottom="8dp"
  		android:layout_height="75dp">

        <TextView
            android:id="@+id/txtV_infoQueryResultListItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtV_infoQueryResultListItemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtV_infoQueryResultListItemTitle" />

        <TextView
            android:id="@+id/txtV_infoQueryResultListItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtV_infoQueryResultListItemTitle"
            android:layout_centerHorizontal="true" />
`
        <TextView
            android:id="@+id/txtV_infoQueryResultListItemComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txtV_infoQueryResultListItemTitle"
            android:textColor="@color/lightsalmon" />
    </RelativeLayout>

</RelativeLayout>