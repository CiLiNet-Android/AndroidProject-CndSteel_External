<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollV_planDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/lyot_planDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:visibility="invisible">

        <!-- 订货计划年月 -->
        <RelativeLayout
            style="@style/CommonDataRowStyle"
            android:layout_marginTop="20dp" >

            <TextView
                style="@style/CommonDataRowTitleStyle"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/plan_yearMonth" />

            <TextView
                android:id="@+id/plan_detail_yearMonth"
                style="@style/CommonDataRowContentStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- 应收保证金金额 -->
        <RelativeLayout style="@style/CommonDataRowStyle" >

            <TextView
                style="@style/CommonDataRowTitleStyle"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/contract_must_get_pledge_money" />

            <TextView
                android:id="@+id/plan_detail_must_get_pledge_money"
                style="@style/CommonDataRowContentStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- 应收保证金日期 -->
        <RelativeLayout style="@style/CommonDataRowStyle" >

            <TextView
                style="@style/CommonDataRowTitleStyle"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/contract_must_get_pledge_date" />

            <TextView
                android:id="@+id/plan_detail_must_get_pledge_date"
                style="@style/CommonDataRowContentStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- 状态 -->
        <RelativeLayout style="@style/CommonDataRowStyle" >

            <TextView
                style="@style/CommonDataRowTitleStyle"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/status" />

            <TextView
                android:id="@+id/plan_detail_status"
                style="@style/CommonDataRowContentStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- 计划吨数 -->
        <RelativeLayout style="@style/CommonDataRowStyle" >

            <TextView
                style="@style/CommonDataRowTitleStyle"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/plan_tonnage" />

            <TextView
                android:id="@+id/plan_detail_tonnage"
                style="@style/CommonDataRowContentStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- 实际吨数 -->
        <RelativeLayout style="@style/CommonDataRowStyle" >

            <TextView
                style="@style/CommonDataRowTitleStyle"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/plan_reality_tonnage" />

            <TextView
                android:id="@+id/plan_detail_reality_tonnage"
                style="@style/CommonDataRowContentStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        
    </LinearLayout>

</ScrollView>