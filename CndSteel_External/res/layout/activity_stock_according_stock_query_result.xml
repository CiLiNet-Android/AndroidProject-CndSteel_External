<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pullToRefresh="http://schemas.android.com/apk/res/com.cndsteel"
    android:id="@+id/lyot_stockQueryResult"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:visibility="invisible">

    <com.handmark.pulltorefresh.library.PullToRefreshExpandableListView
        android:id="@+id/listV_stockQueryResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:fadingEdge="horizontal"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:divider="@color/grey"
        android:dividerHeight="1dp"
        android:childDivider="#f5f5f5"
        android:smoothScrollbar="true"
        pullToRefresh:ptrHeaderBackground="@color/grey" />

</LinearLayout>