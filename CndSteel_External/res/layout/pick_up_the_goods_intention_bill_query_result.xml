<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- 意向单号 -->
     <RelativeLayout 
        style="@style/CommonDataRowStyle"
        android:background="@color/white_bg" >
        <TextView 
            android:id="@+id/title_intentBillNum"
            style="@style/CommonDataRowTitleStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/intentBillNum"/>
        <TextView 
            android:id="@+id/txtV_contractDate"
            style="@style/CommonDataRowTitleStyle"
            android:layout_toRightOf="@id/title_intentBillNum"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:text="123456789" />

    </RelativeLayout>
    
     
     <!-- 吨数 -->
     <RelativeLayout 
        style="@style/CommonDataRowStyle">
        
        <TextView 
            style="@style/CommonDataRowTitleStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/tonnage"/>
        
        <TextView 
            android:id="@+id/txtV_tonnage"
            style="@style/CommonDataRowContentStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="1号仓" />

    </RelativeLayout>
    
     <!-- 件数 -->
     <RelativeLayout 
        style="@style/CommonDataRowStyle">
        
        <TextView 
            style="@style/CommonDataRowTitleStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/stock_numberOfPackages"/>
        
        <TextView 
            android:id="@+id/txtV_numberOfPackages"
            style="@style/CommonDataRowContentStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="123" />

    </RelativeLayout>
    
     <!-- 仓库 -->
     <RelativeLayout 
        android:id="@+id/lyot_contractDate"
        style="@style/CommonDataRowStyle">
        
        <TextView 
            style="@style/CommonDataRowTitleStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/warehouse"/>
        
        <TextView 
            android:id="@+id/txtV_warehouse"
            style="@style/CommonDataRowContentStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="1号仓" />

    </RelativeLayout>
    
     <!-- 登记日期 -->
     <RelativeLayout 
        style="@style/CommonDataRowStyle">
        <TextView 
            style="@style/CommonDataRowTitleStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/recordDate"/>
        <TextView 
            android:id="@+id/txtV_recordDate"
            style="@style/CommonDataRowContentStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2014/06" />
    </RelativeLayout>
    

</LinearLayout>
