<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- 合同号 -->
    <RelativeLayout
        style="@style/CommonDataRowStyle"
        android:background="@color/white_bg" >

        <TextView
            android:id="@+id/shipment_AsContractNum"
            style="@style/CommonDataRowContentStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="@string/contract_num" />
        <TextView
            android:id="@+id/shipment_AsContractNum_value"
            style="@style/CommonDataRowContentStyle"
            android:layout_toRightOf="@id/shipment_AsContractNum"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="25461247896215" />

    </RelativeLayout>

    <!-- 吨数 -->
    <RelativeLayout style="@style/CommonDataRowStyle" >

        <TextView
            style="@style/CommonDataRowTitleStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/tonnage" />

        <TextView
            android:id="@+id/shipment_AsContractNum_tonnage"
            style="@style/CommonDataRowContentStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2000" />
    </RelativeLayout>
    
    <!-- 件数 -->
    <RelativeLayout style="@style/CommonDataRowStyle" >

        <TextView
            style="@style/CommonDataRowTitleStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/stock_numberOfPackages" />

        <TextView
            android:id="@+id/shipment_AsContractNum_numberOfPackages"
            style="@style/CommonDataRowContentStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="200" />
    </RelativeLayout>
   

</LinearLayout>