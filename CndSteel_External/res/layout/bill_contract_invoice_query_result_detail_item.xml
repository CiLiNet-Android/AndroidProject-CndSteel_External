<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:orientation="vertical" >
    
      <!-- 发票号 -->
    <RelativeLayout style="@style/CommonDataRowStyle"
        android:gravity="center_vertical"
        android:background="@null" >
        <TextView
            android:id="@+id/titleBillNumber"
            style="@style/CommonDataRowTitleStyle"
            android:lineSpacingMultiplier="1.1"
            android:text="@string/BillNumber" />
        <TextView
            android:id="@+id/txtV_contractInvoiceDetailInvNO"
            style="@style/CommonDataRowTitleStyle"
            android:layout_toRightOf="@id/titleBillNumber"
            android:layout_marginLeft="15dp" />
    </RelativeLayout>
    
    <!-- 开票日期 -->
    <RelativeLayout style="@style/CommonDataRowStyle"
        android:gravity="center_vertical" >
        <TextView
            style="@style/CommonDataRowTitleStyle"
            android:lineSpacingMultiplier="1.1"
            android:text="@string/invoiceDate" />
        <TextView
            android:id="@+id/txtV_contractInvoiceDetailInvDate"
            style="@style/CommonDataRowTitleStyle"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp" />
    </RelativeLayout>
    
    <!-- 发票金额 -->
    <RelativeLayout style="@style/CommonDataRowStyle"
        android:gravity="center_vertical" >
        <TextView
            style="@style/CommonDataRowTitleStyle"
            android:lineSpacingMultiplier="1.1"
            android:text="@string/invoiceAmount" />
        <TextView
            android:id="@+id/txtV_contractInvoiceDetailAmount"
            style="@style/CommonDataRowTitleStyle"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp" />
    </RelativeLayout>
    
    <!-- 签收状态 -->
    <RelativeLayout style="@style/CommonDataRowStyle"
        android:gravity="center_vertical" >
        <TextView
            style="@style/CommonDataRowTitleStyle"
            android:lineSpacingMultiplier="1.1"
            android:text="@string/signForStatus" />
        <TextView
            android:id="@+id/txtV_contractInvoiceDetailSignStatus"
            style="@style/CommonDataRowTitleStyle"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp" />
    </RelativeLayout>
    

</LinearLayout>
