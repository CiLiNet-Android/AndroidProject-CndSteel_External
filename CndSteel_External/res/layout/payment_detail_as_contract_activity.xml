<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <!-- 合同号 -->
    <RelativeLayout
        style="@style/CommonDataRowStyle"
        android:background="@color/white_bg" >

        <TextView
            android:id="@+id/contract_item_Num_title"
            style="@style/CommonDataRowContentStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="@string/contract_num" />
        <TextView
            android:id="@+id/contract_terms_Num"
            style="@style/CommonDataRowContentStyle"
            android:layout_toRightOf="@id/contract_item_Num_title"
            android:layout_centerVertical="true"
            android:textColor="@color/black"/>

    </RelativeLayout>
    
    <ListView 
        android:id="@+id/listV_paymentContractQueryDetailList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="#f5f5f5"
        android:dividerHeight="15dp" />
    

</LinearLayout>
