<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="15dp"
        android:background="@drawable/module_center_item_bg">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="@string/settings_autoLogin"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        
        <com.cndsteel.framework.views.toggle.Toggle
            android:id="@+id/toggle_settingsAutoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        
    </RelativeLayout>
    
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        
        <Button 
            android:id="@+id/btn_logout"
           	style="@style/CommonButtonStyle"
           	android:layout_gravity="top|center_horizontal"
            android:text="@string/settings_logOff"/>
        
    </FrameLayout>

</LinearLayout>