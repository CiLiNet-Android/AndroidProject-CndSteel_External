<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_stock_according_stock_query_result_child"
        android:background="@drawable/wave" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/wave" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/CommonDataRowTitleStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/stock_into_date"
            android:textSize="13sp" />

        <TextView
            style="@style/CommonDataRowTitleStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/package_num"
            android:textSize="13sp" />

        <TextView
            style="@style/CommonDataRowTitleStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tonnage"
            android:textSize="13sp" />

        <TextView
            style="@style/CommonDataRowTitleStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/stock_numberOfPackages"
            android:textSize="13sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/StockContractDetail_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        android:divider="@color/darkgrey"
        android:cacheColorHint="#00000000"
        android:dividerHeight="1px" >
    </ListView>

</LinearLayout>