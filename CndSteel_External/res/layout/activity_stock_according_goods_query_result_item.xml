<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
   
     <TableLayout 
         style="@style/CommonDataRowStyle"
         android:layout_height="wrap_content" >
         <!-- 仓库、吨数 -->
         <TableRow >
             <TextView 
                 style="@style/CommonDataRowTitleStyle"
                 android:lineSpacingMultiplier="1.5"
                 android:text="@string/Warehouse"/>
             <TextView 
                 android:id="@+id/StockAccordingGoodsQueryResult_warehouse"
                 style="@style/CommonDataRowTitleStyle"
                 android:layout_marginLeft="15dp"
                 android:layout_weight="1"
                 android:text="1号仓库"/>
             <TextView 
                 style="@style/CommonDataRowTitleStyle"
                 android:text="@string/Tonnage"/>
             <TextView 
                 android:id="@+id/StockAccordingGoodsQueryResult_Tonnage"
                 style="@style/CommonDataRowTitleStyle"
                 android:layout_marginLeft="15dp"
                 android:layout_weight="1"
                 android:text="123"/>
         </TableRow>
         
         <!-- 件数 -->
         <TableRow >
             <TextView 
                 style="@style/CommonDataRowTitleStyle"
                 android:text="@string/stock_NumberOfPackages"/>
             <TextView 
                 android:id="@+id/StockAccordingGoodsQueryResult_NumberOfPackages"
                 style="@style/CommonDataRowTitleStyle"
                 android:layout_marginLeft="15dp"
                 android:layout_weight="1"
                 android:text="50"/>
             
             <TextView 
                 android:id="@+id/StockAccordingGoodsQueryResult_title_Hide"
                 style="@style/CommonDataRowTitleStyle"
                 android:text="@string/Money"
                 android:visibility="invisible" />
             <TextView 
                 android:id="@+id/StockAccordingGoodsQueryResult_title_Value"
                 style="@style/CommonDataRowTitleStyle"
                 android:layout_marginLeft="15dp"
                 android:layout_weight="1"
                 android:visibility="invisible"
                 android:text="1230" />
         </TableRow>
     </TableLayout>
    

</LinearLayout>
