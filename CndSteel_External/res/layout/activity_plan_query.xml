<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <!-- 计划年月 -->
    <RelativeLayout 
        android:id="@+id/lyot_planDate"
        style="@style/CommonDataRowStyle">
        
        <TextView 
			style="@style/CommonDataRowTitleStyle"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:text="@string/plan_date"/>
        
        <TextView
            android:id="@+id/txtV_planDate"
			style="@style/CommonDataRowContentStyle"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="25dp"/>
        
        <ImageButton 
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/common_spinner_down_arrow"/>
            
    </RelativeLayout>
    
    <!-- 计划状态 -->
    <RelativeLayout 
        android:id="@+id/lyot_planStatus"
        style="@style/CommonDataRowStyle">
        
        <TextView 
			style="@style/CommonDataRowTitleStyle"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:text="@string/plan_status"/>
        
        <TextView
            android:id="@+id/txtV_planStatus"
			style="@style/CommonDataRowContentStyle"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="25dp"/>
            
        <ImageButton 
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
            android:background="@drawable/common_spinner_down_arrow"/>
        
    </RelativeLayout>
    
    
    <!-- 查询按钮 -->
    <Button 
        android:id="@+id/btn_planQuery"
        style="@style/CommonButtonStyle"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/query"/>

</LinearLayout>