<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
   
     <TableLayout 
         style="@style/CommonDataRowStyle"
         android:layout_height="wrap_content" >
         <TableRow >
             <TextView 
                 style="@style/CommonDataRowTitleStyle"
                 android:lineSpacingMultiplier="1.5"
                 android:text="@string/contract_GoodsName"/>
             <TextView 
                 android:id="@+id/stock_goodsName"
                 style="@style/CommonDataRowTitleStyle"
                 android:layout_weight="1"
                 android:layout_marginLeft="15dp"
                 android:text="管坯"/>
             <TextView 
                 style="@style/CommonDataRowTitleStyle"
                 android:text="@string/Material"/>
             <TextView 
                 android:id="@+id/stock_Material"
                 style="@style/CommonDataRowTitleStyle"
                 android:layout_weight="1"
                 android:layout_marginLeft="15dp"
                 android:text="20#"/>
         </TableRow>
         
         <TableRow >
             <TextView 
                 style="@style/CommonDataRowTitleStyle"
                 android:lineSpacingMultiplier="1.5"
                 android:text="@string/stock_Standard"/>
             <TextView 
                 android:id="@+id/stock_Standard"
                 style="@style/CommonDataRowTitleStyle"
                 android:layout_marginLeft="15dp"
                 android:layout_weight="1"/>
             <TextView 
                 style="@style/CommonDataRowTitleStyle"
                 android:text="@string/Tonnage"/>
             <TextView 
                 android:id="@+id/stock_Tonnage"
                 style="@style/CommonDataRowTitleStyle"
                 android:layout_marginLeft="15dp"
                 android:layout_weight="1"
                 android:text="123"/>
         </TableRow>
         
         <TableRow >
             <TextView 
                 style="@style/CommonDataRowTitleStyle"
                 android:text="@string/stock_NumberOfPackages"/>
             <TextView 
                 android:id="@+id/stock_NumberOfPackages"
                 style="@style/CommonDataRowTitleStyle"
                 android:layout_marginLeft="15dp"
                 android:layout_weight="1"
                 android:text="50"/>
             
             <TextView 
                 android:id="@+id/title_Hide"
                 style="@style/CommonDataRowTitleStyle"
                 android:text="@string/Money"
                 android:visibility="invisible" />
             <TextView 
                 android:id="@+id/stock_Value"
                 style="@style/CommonDataRowTitleStyle"
                 android:layout_marginLeft="15dp"
                 android:layout_weight="1"
                 android:visibility="invisible"
                 android:text="1230" />
         </TableRow>
     </TableLayout>
    

</LinearLayout>
