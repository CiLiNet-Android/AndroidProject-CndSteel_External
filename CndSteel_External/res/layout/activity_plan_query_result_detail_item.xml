<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- 品名 -->
    <RelativeLayout
        style="@style/CommonDataRowStyle"
        android:background="#f5f5f5" >

        <TextView
            android:id="@+id/contract_detail_left_goodsName"
            style="@style/CommonDataRowTitleStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/contract_GoodsName" />

        <TextView
            android:id="@+id/plan_detail_goodsName"
            style="@style/CommonDataRowTitleStyle"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/contract_detail_left_goodsName" />
    </RelativeLayout>

    <!-- 材质 -->
    <RelativeLayout style="@style/CommonDataRowStyle" >

        <TextView
            style="@style/CommonDataRowTitleStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/material" />

        <TextView
            android:id="@+id/plan_detail_material"
            style="@style/CommonDataRowContentStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!-- 预定吨数 -->
    <RelativeLayout style="@style/CommonDataRowStyle" >

        <TextView
            style="@style/CommonDataRowTitleStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/reserve" />

        <TextView
            android:id="@+id/plan_detail_reserve_tonnage"
            style="@style/CommonDataRowContentStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!-- 实际吨数 -->
    <RelativeLayout style="@style/CommonDataRowStyle" >

        <TextView
            style="@style/CommonDataRowTitleStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/plan_reality_tonnage" />

        <TextView
            android:id="@+id/plan_detail_btm_reality_tonnage"
            style="@style/CommonDataRowContentStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!-- 钢厂 -->
    <RelativeLayout style="@style/CommonDataRowStyle" >

        <TextView
            style="@style/CommonDataRowTitleStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/steelWorks" />

        <TextView
            android:id="@+id/plan_detail_steelWorks"
            style="@style/CommonDataRowContentStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

</LinearLayout>